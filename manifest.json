{
  "name": "Groupon: Offer Seeker",
  "version": "1.0",
  "description": "Finds Groupon offers related to current navigated website",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "images/groupon_icon_grey_32.png",
      "48": "images/groupon_icon_grey_48.png"
    }
  },
  "icons": {
    "32": "images/groupon_icon_32.png",
    "48": "images/groupon_icon_48.png"
  },
  "manifest_version": 2
}
